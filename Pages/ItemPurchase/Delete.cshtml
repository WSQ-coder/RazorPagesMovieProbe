@page
@model RazorPagesMovie.Pages.ItemPurchase.DeleteModel

@{
    ViewData["Title"] = "Удалить позицию";
}

<h2>Удалить позицию заказа</h2>

<div class="alert alert-warning">
    <strong>Вы уверены, что хотите удалить эту позицию?</strong>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-bold">Заказ</dt>
            <dd class="col-sm-9">@Model.ItemPurchase.IdPurchaseNavigation?.NumberPurchase</dd>

            <dt class="col-sm-3 fw-bold">Товар</dt>
            <dd class="col-sm-9">@Model.ItemPurchase.IdProductNavigation?.Name</dd>

            <dt class="col-sm-3 fw-bold">Количество</dt>
            <dd class="col-sm-9">@Model.ItemPurchase.QuantityInPurchase</dd>

            <dt class="col-sm-3 fw-bold">Цена</dt>
            <dd class="col-sm-9">@Model.ItemPurchase.PriceInPurchase.ToString("F2") ₽</dd>

            <dt class="col-sm-3 fw-bold">Статус</dt>
            <dd class="col-sm-9">@Model.ItemPurchase.StatusItem</dd>
        </dl>
    </div>
</div>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="ItemPurchase.IdItemPurchase" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-page="./Index" class="btn btn-secondary ms-2">Отмена</a>
</form>