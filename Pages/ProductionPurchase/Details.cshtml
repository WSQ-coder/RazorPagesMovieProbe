@page
@model RazorPagesMovie.Pages.ProductionPurchase.DetailsModel

@{
    ViewData["Title"] = "Детали записи";
}

<h2>Детали производственного заказа</h2>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Продавец</dt>
            <dd class="col-sm-9">@Model.ProductionPurchase.IdSellerNavigation?.AccountName</dd>

            <dt class="col-sm-3">Покупатель</dt>
            <dd class="col-sm-9">@Model.ProductionPurchase.IdBuyerNavigation?.AccountName</dd>

            <dt class="col-sm-3">Товар</dt>
            <dd class="col-sm-9">@Model.ProductionPurchase.IdProductNavigation?.Name ?? "—"</dd>

            <dt class="col-sm-3">Направление</dt>
            <dd class="col-sm-9">@(Model.ProductionPurchase.DirectionFromSeller ? "От продавца" : "К продавцу")</dd>

            <dt class="col-sm-3">Текст</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.ProductionPurchase.TextAccounts) ? "—" : Model.ProductionPurchase.TextAccounts)</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Edit" asp-route-id="@Model.ProductionPurchase.IdProductionPurchase" class="btn btn-primary">Изменить</a>
    <a asp-page="./Index" class="btn btn-secondary ms-2">Назад к списку</a>
</div>