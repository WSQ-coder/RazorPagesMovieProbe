@page
@model RazorPagesMovie.Pages.Role.IndexModel

@{
    ViewData["Title"] = "Роли";
}

<h2>Роли</h2>

<p>
    <a asp-page="Create" class="btn btn-success">+ Добавить роль</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Role[0].RoleName)</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Role)
        {
            <tr>
                <td>@item.RoleName</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.IdRole">Изменить</a> |
                    <a asp-page="./Details" asp-route-id="@item.IdRole">Подробности</a> |
                    <a asp-page="./Delete" asp-route-id="@item.IdRole">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>