@page
@model RazorPagesMovie.Pages.CatalogForMaterial.DetailsModel

@{
    ViewData["Title"] = "Детали материала";
}

<h2>Детали материала</h2>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Название материала</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CatalogForMaterial.MaterialName)</dd>

            <dt class="col-sm-3">Цена</dt>
            <dd class="col-sm-9">@Model.CatalogForMaterial.CostPerUnit.ToString("F2") ₽</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Edit" asp-route-id="@Model.CatalogForMaterial.IdMaterial" class="btn btn-primary">Изменить</a>
    <a asp-page="./Index" class="btn btn-secondary ms-2">Назад к списку</a>
</div>