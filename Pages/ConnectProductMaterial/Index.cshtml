@page
@model RazorPagesMovie.Pages.ConnectProductMaterial.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Список связей товара и материала</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ConnectProductMaterial[0].IdProductNavigation.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConnectProductMaterial[0].IdMaterialNavigation.MaterialName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConnectProductMaterial[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConnectProductMaterial[0].Unit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ConnectProductMaterial)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProductNavigation.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdMaterialNavigation.MaterialName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit)
                </td>

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>