@page
@model RazorPagesMovie.Pages.ConnectProductMaterial.DetailsModel

@{
    ViewData["Title"] = "Детали связи";
}

<h2>Детали связи товара и материала</h2>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Товар</dt>
            <dd class="col-sm-9">@Model.ConnectProductMaterial.IdProductNavigation?.Name</dd>

            <dt class="col-sm-3">Материал</dt>
            <dd class="col-sm-9">@Model.ConnectProductMaterial.IdMaterialNavigation?.MaterialName</dd>

            <dt class="col-sm-3">Количество</dt>
            <dd class="col-sm-9">@Model.ConnectProductMaterial.Quantity.ToString("F2")</dd>

            <dt class="col-sm-3">Ед. измерения</dt>
            <dd class="col-sm-9">@Model.ConnectProductMaterial.Unit</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Edit" asp-route-id="@Model.ConnectProductMaterial.Id" class="btn btn-primary">Изменить</a>
    <a asp-page="./Index" class="btn btn-secondary ms-2">Назад к списку</a>
</div>