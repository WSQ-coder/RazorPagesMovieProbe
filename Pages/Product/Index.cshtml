@page
@model RazorPagesMovie.Pages.Product.IndexModel

@{
    ViewData["Title"] = "Товары";
}

<h2>Товары</h2>
<p>
    <a asp-page="Create" class="btn btn-success">+ Создать товар</a>
</p>
<!-- Форма поиска и фильтрации -->
<form method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-md-4">
            <input type="text"
                   name="search"
                   value="@Model.SearchString"
                   class="form-control"
                   placeholder="Поиск по названию или типу" />
        </div>
        <div class="col-md-3">
            <select name="status" class="form-control">
                <option value="">Все статусы</option>
                <option value="available" selected="@(Model.StatusFilter == "available")">Доступен</option>
                <option value="reserved" selected="@(Model.StatusFilter == "reserved")">Зарезервирован</option>
                <option value="sold" selected="@(Model.StatusFilter == "sold")">Продан</option>
            </select>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary">Фильтровать</button>
            <a asp-page="./Index" class="btn btn-secondary ms-2">Сброс</a>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Product[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Product[0].TypeArt)</th>
            <th>Цена</th>
            <th>Кол-во</th>
            <th>Статус</th>
            <th>Инд.заказ для покупателя</th>
            <th>Продавец</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.TypeArt</td>
                <td>@item.Price.ToString("F2") ₽</td>
                <td>@item.QuantityForSale</td>
                <td>@item.Status</td>
                <td>@item.IdIndivBuyerNavigation?.AccountName</td>
                <td>@item.IdSellerNavigation?.AccountName</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.IdProduct">Изменить</a> |
                    <a asp-page="./Details" asp-route-id="@item.IdProduct">Подробности</a> |
                    <a asp-page="./Delete" asp-route-id="@item.IdProduct">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>