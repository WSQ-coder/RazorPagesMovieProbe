@page
@model RazorPagesMovie.Pages.CatalogForMaterial.CreateModel

@{
    ViewData["Title"] = "Добавить материал";
}

<h2>Добавить новый материал</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="CatalogForMaterial.MaterialName">Название материала</label>
        <input asp-for="CatalogForMaterial.MaterialName" class="form-control" />
        <span asp-validation-for="CatalogForMaterial.MaterialName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CatalogForMaterial.CostPerUnit">Цена материала (₽)</label>
        <input asp-for="CatalogForMaterial.CostPerUnit"
               type="number"
               step="0.01"
               min="0.01"
               class="form-control" />
        <span asp-validation-for="CatalogForMaterial.CostPerUnit" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <input type="submit" value="Создать" class="btn btn-primary" />
        <a asp-page="./Index" class="btn btn-secondary ms-2">Отмена</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}