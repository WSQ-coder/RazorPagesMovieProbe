@page
@model RazorPagesMovie.Pages.ItemPurchase.DetailsModel

@{
    ViewData["Title"] = "Детали позиции";
}

<h2>Детали позиции заказа</h2>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Заказ</dt>
            <dd class="col-sm-9">@Model.ItemPurchase.IdPurchaseNavigation?.NumberPurchase</dd>

            <dt class="col-sm-3">Товар</dt>
            <dd class="col-sm-9">@Model.ItemPurchase.IdProductNavigation?.Name</dd>

            <dt class="col-sm-3">Количество</dt>
            <dd class="col-sm-9">@Model.ItemPurchase.QuantityInPurchase</dd>

            <dt class="col-sm-3">Цена</dt>
            <dd class="col-sm-9">@Model.ItemPurchase.PriceInPurchase.ToString("F2") ₽</dd>

            <dt class="col-sm-3">Статус</dt>
            <dd class="col-sm-9">@Model.ItemPurchase.StatusItem</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Edit" asp-route-id="@Model.ItemPurchase.IdItemPurchase" class="btn btn-primary">Изменить</a>
    <a asp-page="./Index" class="btn btn-secondary ms-2">Назад к списку</a>
</div>