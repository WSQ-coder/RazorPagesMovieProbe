@page
@model RazorPagesMovie.Pages.ProductionPurchase.DeleteModel

@{
    ViewData["Title"] = "Удалить запись";
}

<h2>Удалить производственный заказ</h2>

<div class="alert alert-warning">
    <strong>Вы уверены, что хотите удалить эту запись?</strong>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-bold">Продавец</dt>
            <dd class="col-sm-9">@Model.ProductionPurchase.IdSellerNavigation?.AccountName</dd>

            <dt class="col-sm-3 fw-bold">Покупатель</dt>
            <dd class="col-sm-9">@Model.ProductionPurchase.IdBuyerNavigation?.AccountName</dd>

            <dt class="col-sm-3 fw-bold">Товар</dt>
            <dd class="col-sm-9">@Model.ProductionPurchase.IdProductNavigation?.Name ?? "—"</dd>

            <dt class="col-sm-3 fw-bold">Направление</dt>
            <dd class="col-sm-9">@(Model.ProductionPurchase.DirectionFromSeller ? "От продавца" : "К продавцу")</dd>

            <dt class="col-sm-3 fw-bold">Текст</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.ProductionPurchase.TextAccounts) ? "—" : Model.ProductionPurchase.TextAccounts)</dd>
        </dl>
    </div>
</div>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="ProductionPurchase.IdProductionPurchase" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-page="./Index" class="btn btn-secondary ms-2">Отмена</a>
</form>