@page
@model RazorPagesMovie.Pages.Seller.SellerIndexModel
@{
    ViewData["Title"] = "Панель продавца";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Панель продавца: @Model.SellerAccount?.AccountName</h1>
        <a class="btn btn-primary" asp-page="/Product/Create">
            <i class="bi bi-plus-circle"></i> Добавить товар
        </a>
    </div>

    <div class="row">
        <!-- Левая колонка: Мои товары -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h2 class="h5 mb-0">Мои товары</h2>
                </div>
                <div class="card-body">
                    @if (Model.Products != null && Model.Products.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Название</th>
                                        <th>Тип</th>
                                        <th>Цена</th>
                                        <th>Статус</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>



                                <tbody>
                                    @foreach (var item in Model.Products)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                            <td>@Html.DisplayFor(modelItem => item.TypeArt)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                            <td>
                                                @if (item.Status == "available")
                                                {
                                                    <span class="badge bg-success">В продаже</span>
                                                }
                                                else if (item.Status == "reserved")
                                                {
                                                    <span class="badge bg-secondary">Зарезервирован</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Продан</span>
                                                }
                                                @if(item.IdIndivBuyer != null)
                                                {
                                                    <br><span class="badge bg-secondary">Персональный заказ</span>
                                                }
                                            </td>
                                            <td>
                                                <a class="btn btn-sm btn-info" asp-page="/Product/Details" asp-route-id="@item.IdProduct">
                                                    <i class="bi bi-eye"></i> Просмотреть
                                                </a>
                                                <a class="btn btn-sm btn-secondary" asp-page="/Product/Edit" asp-route-id="@item.IdProduct">
                                                    <i class="bi bi-pencil"></i> Редактировать
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">У вас пока нет товаров. Создайте первый товар!</p>
                    }
                </div>
            </div>
        </div>

        <!-- заказы -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h2 class="h5 mb-0">ЗАКАЗЫ</h2>
                </div>
                <div class="card-body">
                    @if (Model.OrdersItems != null && Model.OrdersItems.Any())
                    {
                        <div class="list-group">

                            @foreach (var order in Model.OrdersItems)
                            {
                                <div class="list-group-item list-group-item-action mb-2">
                                    <div class="d-flex w-100 justify-content-between">
                                        <br /><small class="text-muted">Заказ N @order.IdPurchaseNavigation.NumberPurchase</small>
                                        <br /><small class="text-muted">Название: @order.IdProductNavigation.Name</small>
                                        <br /><small class="text-muted">Адрес доставки: @order.IdPurchaseNavigation.AddressDeparture</small>
                                        <br /><small class="text-muted">Количество: @order.QuantityInPurchase</small>
                                        <br /><small class="text-muted">Цена: @order.PriceInPurchase</small>
                                    </div>
                                    @* <p class="mb-1">
                                        @if (string.IsNullOrEmpty(order.TextAccounts))
                                        {
                                            <text>Без описания</text>
                                        }
                                        else
                                        {
                                            @order.TextAccounts
                                        }
                                    </p>

                                    <div class="mt-2">
                                        @if (order.IdProduct.HasValue)
                                        {
                                            <span class="badge bg-success mt-1">Товар создан</span>
                                            <a class="btn btn-sm btn-outline-primary mt-1" asp-page="/Product/Details" asp-route-id="@order.IdProduct">
                                                Посмотреть товар
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary mt-1">Ожидает обработки</span>
                                            <a class="btn btn-sm btn-primary mt-1" asp-page="/Seller/CreateCustomProduct" asp-route-id="@order.IdProductionPurchase">
                                                Создать товар
                                            </a>
                                        } 
                                    </div>
                                        *@

                                    
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">У вас нет индивидуальных заказов.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>