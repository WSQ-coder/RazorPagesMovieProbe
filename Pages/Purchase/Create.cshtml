@page
@model RazorPagesMovie.Pages.Purchase.CreateModel

@{
    ViewData["Title"] = "Создать заказ";
}

<h2>Создать новый заказ</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="Purchase.NumberPurchase">Номер заказа</label>
        <input asp-for="Purchase.NumberPurchase" class="form-control" />
        <span asp-validation-for="Purchase.NumberPurchase" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Purchase.IdBuyer">Покупатель</label>
        <select asp-for="Purchase.IdBuyer"
                asp-items="Model.BuyerList"
                class="form-control">
            <option value="">-- Выберите покупателя --</option>
        </select>
        <span asp-validation-for="Purchase.IdBuyer" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Purchase.IdSeller">Продавец</label>
        <select asp-for="Purchase.IdSeller"
                asp-items="Model.SellerList"
                class="form-control">
            <option value="">-- Выберите продавца --</option>
        </select>
        <span asp-validation-for="Purchase.IdSeller" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Purchase.AddressDeparture">Адрес отправления</label>
        <input asp-for="Purchase.AddressDeparture" class="form-control" />
        <span asp-validation-for="Purchase.AddressDeparture" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Purchase.AddressReceiving">Адрес получения</label>
        <input asp-for="Purchase.AddressReceiving" class="form-control" />
        <span asp-validation-for="Purchase.AddressReceiving" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Purchase.MethodDelivery">Способ доставки</label>
        <select asp-for="Purchase.MethodDelivery" class="form-control">
            <option value="">-- Выберите --</option>
            <option value="courier">Курьер</option>
            <option value="pickup">Самовывоз</option>
            <option value="mail">Почта</option>
        </select>
        <span asp-validation-for="Purchase.MethodDelivery" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Purchase.CreatedAt">Дата создания</label>
        <input asp-for="Purchase.CreatedAt"
               type="date"
               class="form-control" />
        <span asp-validation-for="Purchase.CreatedAt" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <input type="submit" value="Создать" class="btn btn-primary" />
        <a asp-page="./Index" class="btn btn-secondary ms-2">Отмена</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}