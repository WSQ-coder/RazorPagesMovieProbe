@page
@model RazorPagesMovie.Pages.Purchase.IndexModel

@{
    ViewData["Title"] = "Заказы";
}

<h2>Заказы</h2>
<p>
    <a asp-page="Create" class="btn btn-success">+ Создать заказ</a>
</p>

<!-- Форма поиска и фильтрации -->
<form method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-md-3">
            <input type="text"
                   name="search"
                   value="@Model.SearchString"
                   class="form-control"
                   placeholder="Номер заказа" />
        </div>
        <div class="col-md-2">
            <select name="method" class="form-control">
                <option value="">Все способы</option>
                <option value="courier" selected="@(Model.MethodFilter == "courier")">Курьер</option>
                <option value="pickup" selected="@(Model.MethodFilter == "pickup")">Самовывоз</option>
                <option value="mail" selected="@(Model.MethodFilter == "mail")">Почта</option>
            </select>
        </div>
        <div class="col-md-2">
            <input type="date"
                   name="start"
                   value="@(Model.StartDate?.ToString("yyyy-MM-dd"))"
                   class="form-control" />
        </div>
        <div class="col-md-2">
            <input type="date"
                   name="end"
                   value="@(Model.EndDate?.ToString("yyyy-MM-dd"))"
                   class="form-control" />
        </div>
       <div class="col-md-3">
            <button type="submit" class="btn btn-primary">Фильтровать</button>
            <a asp-page="./Index" class="btn btn-secondary ms-2">Сброс</a>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Purchase[0].NumberPurchase)</th>
            <th>Адрес отправления</th>
            <th>Адрес получения</th>
            <th>Доставка</th>
            <th>Дата</th>
            <th>Покупатель</th>
            <th>Продавец</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Purchase)
        {
            <tr>
                <td>@item.NumberPurchase</td>
                <td>@item.AddressDeparture</td>
                <td>@item.AddressReceiving</td>
                <td>@(item.MethodDelivery switch {
                    "courier" => "Курьер",
                    "pickup" => "Самовывоз",
                    "mail" => "Почта",
                    _ => item.MethodDelivery
                })</td>
                <td>@item.CreatedAt.ToString("dd.MM.yyyy")</td>
                <td>@item.IdBuyerNavigation?.AccountName</td>
                <td>@item.IdSellerNavigation?.AccountName</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.IdPurchase">Изменить</a> |
                    <a asp-page="./Details" asp-route-id="@item.IdPurchase">Подробности</a> |
                    <a asp-page="./Delete" asp-route-id="@item.IdPurchase">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>