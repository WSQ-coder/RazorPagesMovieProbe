@page
@model RazorPagesMovie.Pages.AuthorizationModel
@{
    ViewData["Title"] = "Вход в систему";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card">
                <div class="card-header text-center">
                    <h4>Вход в систему</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label for="login" class="form-label">Имя или Email</label>
                            <input type="text"
                                   id="login"
                                   name="LoginInput"
                                   class="form-control"
                                   placeholder="Иван, ivan@example.com"
                                   required />
                            <div class="form-text">Введите имя пользователя или email</div>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Пароль</label>
                            <div class="input-group">
                                <input type="password"
                                       id="password"
                                       name="Password"
                                       class="form-control"
                                       required />
                                <button type="button"
                                        class="btn btn-outline-secondary"
                                        onclick="togglePassword()">
                                    Показать
                                </button>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Войти</button>
                    </form>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
                    }

                    <div class="mt-3 text-center">
                        <a asp-page="/Register">Нет аккаунта? Зарегистрироваться</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword() {
            const pwd = document.getElementById("password");
            const btn = event.target;
            if (pwd.type === "password") {
                pwd.type = "text";
                btn.textContent = "Скрыть";
            } else {
                pwd.type = "password";
                btn.textContent = "Показать";
            }
        }
    </script>
}