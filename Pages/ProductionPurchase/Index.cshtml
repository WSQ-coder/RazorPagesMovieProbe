@page
@model RazorPagesMovie.Pages.ProductionPurchase.IndexModel

@{
    ViewData["Title"] = "Производственные заказы";
}

<h1>Производственные заказы</h1>
<p>
    <a asp-page="Create" class="btn btn-success">+ Добавить запись</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Направление</th>
            <th>Текст</th>
            <th>Покупатель</th>
            <th>Продавец</th>
            <th>Товар</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProductionPurchase)
        {
            <tr>
                <td>@(item.DirectionFromSeller ? "От продавца" : "К продавцу")</td>
                <td>@(string.IsNullOrEmpty(item.TextAccounts) ? "—" : item.TextAccounts)</td>
                <td>@item.IdBuyerNavigation?.AccountName</td>
                <td>@item.IdSellerNavigation?.AccountName</td>
                <td>@item.IdProductNavigation?.Name ?? "—"</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.IdProductionPurchase">Изменить</a> |
                    <a asp-page="./Details" asp-route-id="@item.IdProductionPurchase">Подробности</a> |
                    <a asp-page="./Delete" asp-route-id="@item.IdProductionPurchase">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>