@page
@model RazorPagesMovie.Pages.ConnectProductMaterial.CreateModel

@{
    ViewData["Title"] = "Добавить связь товара и материала";
}

<h2>Добавить новую связь</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="ConnectProductMaterial.IdProduct">Товар</label>
        <select asp-for="ConnectProductMaterial.IdProduct"
                asp-items="Model.ProductList"
                class="form-control">
            <option value="">-- Выберите товар --</option>
        </select>
        <span asp-validation-for="ConnectProductMaterial.IdProduct" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ConnectProductMaterial.IdMaterial">Материал</label>
        <select asp-for="ConnectProductMaterial.IdMaterial"
                asp-items="Model.MaterialList"
                class="form-control">
            <option value="">-- Выберите материал --</option>
        </select>
        <span asp-validation-for="ConnectProductMaterial.IdMaterial" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ConnectProductMaterial.Quantity">Количество / Вес</label>
        <input asp-for="ConnectProductMaterial.Quantity"
               type="number"
               step="0.01"
               min="0.01"
               class="form-control" />
        <span asp-validation-for="ConnectProductMaterial.Quantity" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ConnectProductMaterial.Unit">Единица измерения</label>
        <input asp-for="ConnectProductMaterial.Unit"
               placeholder="напр., кг, шт, м"
               class="form-control" />
        <span asp-validation-for="ConnectProductMaterial.Unit" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <input type="submit" value="Создать" class="btn btn-primary" />
        <a asp-page="./Index" class="btn btn-secondary ms-2">Отмена</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}