@page
@model RazorPagesMovie.Pages.Purchase.DeleteModel

@{
    ViewData["Title"] = "Удалить заказ";
}

<h2>Удалить заказ</h2>

<div class="alert alert-warning">
    <strong>Вы уверены, что хотите удалить этот заказ?</strong>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-bold">Номер заказа</dt>
            <dd class="col-sm-9">@Model.Purchase.NumberPurchase</dd>

            <dt class="col-sm-3 fw-bold">Покупатель</dt>
            <dd class="col-sm-9">@Model.Purchase.IdBuyerNavigation?.AccountName</dd>

            <dt class="col-sm-3 fw-bold">Продавец</dt>
            <dd class="col-sm-9">@Model.Purchase.IdSellerNavigation?.AccountName</dd>

            <dt class="col-sm-3 fw-bold">Адрес отправления</dt>
            <dd class="col-sm-9">@Model.Purchase.AddressDeparture</dd>

            <dt class="col-sm-3 fw-bold">Адрес получения</dt>
            <dd class="col-sm-9">@Model.Purchase.AddressReceiving</dd>

            <dt class="col-sm-3 fw-bold">Способ доставки</dt>
            <dd class="col-sm-9">
                @(Model.Purchase.MethodDelivery switch {
                    "courier" => "Курьер",
                    "pickup" => "Самовывоз",
                    "mail" => "Почта",
                    _ => Model.Purchase.MethodDelivery
                })
            </dd>

            <dt class="col-sm-3 fw-bold">Дата создания</dt>
            <dd class="col-sm-9">@Model.Purchase.CreatedAt.ToString("dd.MM.yyyy")</dd>
        </dl>
    </div>
</div>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="Purchase.IdPurchase" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-page="./Index" class="btn btn-secondary ms-2">Отмена</a>
</form>