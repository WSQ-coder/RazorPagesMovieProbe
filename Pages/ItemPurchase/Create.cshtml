@page
@model RazorPagesMovie.Pages.ItemPurchase.CreateModel

@{
    ViewData["Title"] = "Добавить позицию заказа";
}

<h2>Добавить новую позицию</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="ItemPurchase.IdPurchase">Заказ</label>
        <select asp-for="ItemPurchase.IdPurchase"
                asp-items="Model.PurchaseList"
                class="form-control">
            <option value="">-- Выберите заказ --</option>
        </select>
        <span asp-validation-for="ItemPurchase.IdPurchase" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ItemPurchase.IdProduct">Товар</label>
        <select asp-for="ItemPurchase.IdProduct"
                asp-items="Model.ProductList"
                class="form-control">
            <option value="">-- Выберите товар --</option>
        </select>
        <span asp-validation-for="ItemPurchase.IdProduct" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ItemPurchase.QuantityInPurchase">Количество</label>
        <input asp-for="ItemPurchase.QuantityInPurchase"
               type="number"
               min="1"
               class="form-control" />
        <span asp-validation-for="ItemPurchase.QuantityInPurchase" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ItemPurchase.PriceInPurchase">Цена (₽)</label>
        <input asp-for="ItemPurchase.PriceInPurchase"
               type="number"
               step="0.01"
               min="0.01"
               class="form-control" />
        <span asp-validation-for="ItemPurchase.PriceInPurchase" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ItemPurchase.StatusItem">Статус</label>
        <input asp-for="ItemPurchase.StatusItem"
               placeholder="напр., В обработке, Отправлен"
               class="form-control" />
        <span asp-validation-for="ItemPurchase.StatusItem" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <input type="submit" value="Создать" class="btn btn-primary" />
        <a asp-page="./Index" class="btn btn-secondary ms-2">Отмена</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}